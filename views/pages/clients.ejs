<!doctype html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>
    <div class="container">
        <div class="row">
            <h3 class="col-sm-10 col-sm-offset-1">OIDC Client Dashboard</h3>
        </div>
        <div class="row">
            <h4 class="col-sm-10 col-sm-offset-1">Authorized Clients</h3>
        </div>
        <% for(var i=0; i<clients.authedClients.length; i++) {%>
            <div class="row">
                <a class="col-sm-10 col-sm-offset-1" href="<%='/clients/'+clients.authedClients[i].id%>"><%=clients.authedClients[i].name%></a>
            </div>
        <% } %>

        <div class="row">
            <h4 class="col-sm-10 col-sm-offset-1">Owned Clients</h3>
        </div>
        <div class="row">
            <a class="col-sm-10 col-sm-offset-1" href="/clients/register">Register a new client</a>
        </div>
        <% for(var i=0; i<clients.ownedClients.length; i++) {%>
            <div class="row">
                <a class="col-sm-10 col-sm-offset-1" href="<%='/clients/'+clients.ownedClients[i].id%>"><%=clients.ownedClients[i].name%></a>
            </div>
        <% } %>
    </div>
    <footer>
        <% include ../partials/footer %>
    </footer>
</body>
</html>